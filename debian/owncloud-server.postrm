#!/bin/sh -e

case "$1" in
    purge)
        # Purge configuration
        rm -rf /etc/owncloud 2>/dev/null || true
        rmdir --ignore-fail-on-non-empty /etc/owncloud 2>/dev/null || true
        ;;
    upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
esac

